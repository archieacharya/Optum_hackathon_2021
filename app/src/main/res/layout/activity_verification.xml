<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Verification">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/verifybottom"
        android:fontFamily="@font/muktaa"
        android:text="OTP is valid for 5 minutes"
        android:textColor="@android:color/darker_gray"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_centerInParent="true">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_marginTop="30dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verification Code"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/popp"
            android:textSize="35dp"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please enter the 6 digit verification code\n sent to your number via SMS."
            android:gravity="center"
            android:fontFamily="@font/popp"
            android:textColor="@android:color/darker_gray"
            android:textSize="14dp"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:paddingRight="25dp"
            android:paddingLeft="25dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/otp1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:inputType="number"
                android:gravity="center"
                android:textSize="30dp"
                android:textColor="@android:color/black"
                android:maxLength="1"
                android:background="@color/transparent2"
                android:focusable="true"/>

            <EditText
                android:id="@+id/otp2"
                android:layout_width="0dp"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"
                android:textSize="30dp"
                android:textColor="@android:color/black"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@color/transparent2"
                android:focusable="true"
                android:layout_marginLeft="8dp"/>

            <EditText
                android:id="@+id/otp3"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:maxLength="1"
                android:textSize="30dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:inputType="number"
                android:background="@color/transparent2"
                android:focusable="true"
                android:layout_marginLeft="8dp"/>
            <EditText
                android:id="@+id/otp4"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:inputType="number"
                android:textSize="30dp"
                android:textColor="@android:color/black"
                android:maxLength="1"
                android:background="@color/transparent2"
                android:focusable="true"
                android:gravity="center"
                android:layout_marginLeft="8dp"/>
            <EditText
                android:id="@+id/otp5"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:textSize="30dp"
                android:textColor="@android:color/black"
                android:inputType="number"
                android:layout_weight="1"
                android:maxLength="1"
                android:background="@color/transparent2"
                android:gravity="center"
                android:focusable="true"
                android:layout_marginLeft="8dp"/>
            <EditText
                android:id="@+id/otp6"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="30dp"
                android:textColor="@android:color/black"
                android:maxLength="1"
                android:inputType="number"
                android:background="@color/transparent2"
                android:focusable="true"
                android:layout_marginLeft="8dp"/>






        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_countdown"
            android:layout_width="wrap_content"
            android:padding="25dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="00:00"
            android:fontFamily="@font/arial"
            android:textColor="@color/newblack"
            android:textSize="20sp" />

        <Button
            android:id="@+id/resendotp"
            android:layout_width="wrap_content"
            android:layout_marginRight="25dp"
            android:backgroundTint="@color/transparent"
            android:stateListAnimator="@null"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:textAlignment="textEnd"
            android:fontFamily="@font/popp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@+id/text_view_countdown"
            android:text="Resend OTP"
            android:visibility="invisible"
            tools:visibility="visible" />

        </LinearLayout>

        <Button
            android:id="@+id/otpsubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            android:layout_gravity="center"
            android:text="Submit"
            android:textSize="18dp"
            android:fontFamily="@font/popp"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:stateListAnimator="@null"
            android:clickable = "false"
            android:textColor="@android:color/white"/>

        </LinearLayout>

    </RelativeLayout>






