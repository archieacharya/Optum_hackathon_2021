<?xml version="1.0" encoding="utf-8"?><RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ForgotPassword">


    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:paddingTop="20dp"

        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"

        android:layout_marginRight="30dp"

        android:orientation="vertical">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/popp"
            android:paddingTop="20dp"
            android:text="Forgot Password"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/popp"
            android:textColor="@android:color/darker_gray"
            android:text="Please enter your registered Mobile Number."
            android:textSize="12dp"

            />





        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile Number"
            android:id="@+id/mobile_num"
            android:textSize="20dp"
            android:inputType="number"
            android:fontFamily="@font/muktaa"
            android:maxLength="10"
            android:layout_marginTop="38dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="One Time Password sent via SMS. \n Please check heck your message box for the same."
            android:textSize="12dp"
            android:fontFamily="@font/popp"
            android:layout_marginTop="20dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:id="@+id/otp_btn"
            android:background="@drawable/custom_button"
            android:fontFamily="@font/popp"
            android:stateListAnimator="@null"
            android:textSize="18dp"
            android:text="Get OTP"
            android:textColor="@android:color/white"
            android:textStyle="bold" />











    </LinearLayout>


</RelativeLayout>