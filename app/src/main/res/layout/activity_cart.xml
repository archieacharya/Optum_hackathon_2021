<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".CartActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tabshopname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/varellaaa"
                android:text="Confirm Order"
                android:textColor="@color/newblack"
                android:textSize="20sp"
                android:textStyle="bold" />



        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="60dp"
        android:scrollbars="none"

        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/shop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="@font/muktaa"
                android:text="Reliance Fresh"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"

                android:fontFamily="@font/varellaaa"
                android:textColor="@color/newblack"
                android:text="PAYMENT DETAILS"/>



<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:orientation="horizontal"
        app:cardElevation="@null"
        android:layout_gravity="center_vertical"

        android:layout_height="30dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_marginTop="2dp"

            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_gravity="center_vertical"

            android:layout_height="match_parent">





            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7">



                <TextView
                    android:id="@+id/ptype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muktaa"
                    android:text="Total Cart Value"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:gravity="start">

                </TextView>


            </LinearLayout>





            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">


                <TextView
                    android:id="@+id/pprice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/muktaa"
                    android:gravity="right"
                    android:text="Rs. 150"
                    android:textColor="@color/newblack"

                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:orientation="horizontal"
        app:cardElevation="@null"
        android:layout_gravity="center_vertical"
        android:foregroundGravity="center_vertical"
        android:layout_height="30dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_gravity="center_vertical"

            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_height="30dp">





            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7">


                <TextView
                    android:id="@+id/texalert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/asap"
                    android:gravity="start"
                    android:text="Taxes and Charges"
                    android:textColor="#B533A7E5"
                    android:textSize="12sp"
                    android:textStyle="italic">

                </TextView>


            </LinearLayout>





            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">


                <TextView
                    android:id="@+id/tax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muktaa"
                    android:gravity="right"
                    android:text="Rs. 150"

                    android:textColor="@color/newblack"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"

                android:layout_height="wrap_content">





                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7">



                    <TextView
                        android:id="@+id/shop_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial"
                        android:text="Payable Amount"

                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"

                        android:gravity="start">

                    </TextView>


                </LinearLayout>





                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3">


                    <TextView
                        android:id="@+id/ttl_payable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/arial"
                        android:gravity="end"
                        android:text="Rs. 1216"
                        android:textColor="@color/newblack"

                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>




            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:foregroundGravity="center"
                app:cardElevation="0dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#C9FFEF"
                app:cardCornerRadius="11dp"
                android:layout_height="80dp">




                <TextView
                    android:id="@+id/nocontact"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="7dp"

                    android:textColor="@android:color/black"
                    android:fontFamily="@font/varellaaa"
                    android:text="All deliveries are sanitized and delivered in a No Contact process. Valet will check and leave order at your doorstep."
                    android:textSize="11sp"/>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:foregroundGravity="center"
                app:cardElevation="0dp"
                android:layout_marginTop="20dp"

                app:cardCornerRadius="10dp"
                android:background="#F1F1F1"
                android:layout_height="60dp">

                <EditText
                    android:id="@+id/instructions"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/varellaaa"
                    android:hint="Any delivery instructions? For ex: Don't ring the bell."
                    android:textSize="12sp"
                    android:inputType="text"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_marginTop="20dp"

                android:fontFamily="@font/varellaaa"
                android:textColor="@color/newblack"
                android:text="ORDER DETAILS"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"

                android:id="@+id/recyclerv_order">


            </androidx.recyclerview.widget.RecyclerView>


</RelativeLayout>








        </LinearLayout>

    </ScrollView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:foregroundGravity="center"
        app:cardElevation="3dp"
        android:background="#F1F1F1"
        android:layout_alignParentBottom="true"
        android:layout_height="70dp">



        <Button
            android:layout_gravity="bottom|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textStyle="bold"
            android:id="@+id/psdtoadrss"
            android:fontFamily="@font/popp"
            android:textColor="@color/white"
            android:background="@drawable/bg2"
            android:text="PROCEED TO SELECT ADDRESS"/>



    </androidx.cardview.widget.CardView>




</RelativeLayout>

