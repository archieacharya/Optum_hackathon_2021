<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddressActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tabshopname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/varellaaa"
                android:text="Delivery Address"
                android:textColor="@color/newblack"
                android:textSize="20sp"
                android:textStyle="bold" />



        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="70dp"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:foregroundGravity="center"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#F3F3F3"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="14dp"
        android:layout_marginBottom="10dp"

        android:layout_height="70dp">




        <TextView
            android:id="@+id/gps"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"


            android:fontFamily="@font/asap"
            android:hint="Map Location Coordinates"
            android:textSize="16sp" />


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:foregroundGravity="center"
        app:cardElevation="0dp"

        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="15dp"
        android:background="#F1F1F1"
        android:layout_height="wrap_content">




        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">




            <EditText
                android:id="@+id/plot"
                android:layout_gravity="center"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="7dp"

                android:layout_marginBottom="20dp"
                android:fontFamily="@font/asap"
                android:hint="Plot No./Flat No.* "
                android:textSize="16sp"
                android:inputType="text"/>


            <EditText
                android:id="@+id/area"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="7dp"

                android:fontFamily="@font/asap"
                android:hint="Colony/Apartment/Society/Area*"
                android:textSize="16sp"
                android:inputType="text"/>


            <EditText
                android:id="@+id/reach"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"

                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/asap"
                android:hint="Landmark/How to reach*"
                android:textSize="16sp"
                android:inputType="text"/>





            <EditText
                android:id="@+id/name"
                android:layout_gravity="center"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="7dp"

                android:layout_marginBottom="20dp"
                android:fontFamily="@font/asap"
                android:hint="Additional Contact Name (optional)"
                android:textSize="16sp"
                android:inputType="text"/>

            <EditText
                android:id="@+id/phone"
                android:layout_gravity="center"
                android:layout_marginRight="7dp"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:maxLength="10"
                android:fontFamily="@font/asap"
                android:hint="Additional Contact Number (optional)"
                android:textSize="16sp"
                android:inputType="number"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:foregroundGravity="center"
        app:cardElevation="3dp"
        android:background="#F1F1F1"
        android:layout_alignParentBottom="true"
        android:layout_height="70dp">


        <Button
            android:id="@+id/prsdtopmt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_vertical"
            android:layout_margin="8dp"
            android:background="@drawable/bg2"
            android:fontFamily="@font/popp"
            android:text="PROCEED FOR PAYMENT"
            android:textColor="@color/white"
            android:textStyle="bold" />



    </androidx.cardview.widget.CardView>





</RelativeLayout>
